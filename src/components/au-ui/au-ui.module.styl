.root {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: black;
  color: white;
  overflow: hidden;
  padding: 0;

  > header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    background: rgba(0,0,0,0.25);
    z-index: 1;
  }

  > main {
    width: 100vw;
    height: 100vw;
    box-shadow: inset 0 0 2px 1px white;
    position: absolute;
    top: 0;
    left: 0;
  }

  > aside {
    display: none;
  }

  > footer {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background: rgba(0,0,0, 0.25);
    z-index: 1;
  }
}